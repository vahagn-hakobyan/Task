
@{
    ViewData["Title"] = "AddCar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Car</h1>
<form class="mx-1 mx-md-4" action="/Car/AddNewCar/" method="post">

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input name="Model" id="form3Example1c" class="form-control" />
            <label class="form-label" for="form3Example1c">Model</label>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input name="Color" id="form3Example3c" class="form-control" />
            <label class="form-label" for="form3Example3c">Cars color</label>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input name="UserId" id="form3Example4c" class="form-control" />
            <label class="form-label" for="form3Example4c">User Id</label>
        </div>
    </div>

    <div class="form-group">
        <button class="btn btn-success">Add</button>
    </div>

</form>

