
@{
    ViewData["Title"] = "LoginPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login Page</h1>
<form class="mx-1 mx-md-4" action="/User/Login/" method="post">

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input name="Login" id="form3Example4c" class="form-control" />
            <label class="form-label" for="form3Example4c">Login</label>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input name="Password" type="password" id="form3Example4cd" class="form-control" />
            <label class="form-label" for="form3Example4cd">Password</label>
        </div>
    </div>

    <div class="form-group">
        <button class="btn btn-success">Login</button>
    </div>

</form>

